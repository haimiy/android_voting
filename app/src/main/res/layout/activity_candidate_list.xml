<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".CandidateListActivity">
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:text="Select a candidates" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/candidate1"
            android:layout_marginRight="40dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_round"
            android:gravity="center"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/candidate2"
            android:layout_marginRight="40dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_round"
            android:gravity="center"
            android:text="2"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/candidate3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_round"
            android:gravity="center"
            android:text="3"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
        <fragment
        android:id="@+id/frag_place"
        android:name="com.example.votingapplication.CandidateFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>